<Window x:Class="newton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:newton"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Height="300" Width="300">

            <!-- Draws a diagonal line from (10,10) to (50,50). -->
            <Line    X1="{Binding P1Start.X}" Y1="{Binding P1Start.Y}"    X2="{Binding P1End.X}" Y2="{Binding P1End.Y}"    Stroke="Black"    StrokeThickness="4" />
            <!-- Draws a horizontal line from (10,60) to (150,60). -->
            <Line     X1="{Binding P2Start.X}" Y1="{Binding P2Start.Y}"    X2="{Binding P2End.X}" Y2="{Binding P2End.Y}"     Stroke="Black"     StrokeThickness="4"/>

            <Ellipse Width="50" Height="50" StrokeThickness="1" Stroke="Blue" Canvas.Bottom="0" Canvas.Left="0"/>
            <Ellipse Width="50" Height="50" StrokeThickness="1" Stroke="Red" Canvas.Bottom="250" Canvas.Left="250"/>

        </Canvas>
    </Grid>
</Window>

<Window x:Class="newton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:newton"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Height="{Binding SandBoxSize}" Width="{Binding SandBoxSize}" Background="LightGray">
            <Ellipse Width="{Binding Planet1.Mass}" Height="{Binding Planet1.Mass}" StrokeThickness="1" Stroke="Blue" Canvas.Left="{Binding Planet1.Location.X}" Canvas.Bottom="{Binding Planet1.Location.Y}" />
            <Ellipse Width="{Binding Planet2.Mass}" Height="{Binding Planet2.Mass}" StrokeThickness="1" Stroke="Red" Canvas.Left="{Binding Planet2.Location.X}" Canvas.Bottom="{Binding Planet2.Location.Y}" />
        </Canvas>
    </Grid>
</Window>
